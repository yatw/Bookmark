

<div class="sticky-top">

    <div class="banner">
        <p class="center">Knowledge is power, embedded as links</p>
    </div> 

    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" onClick="window.open('https://github.com/yatw/InfoCluster')">
            <img src="images/logo.jpg" width="60" height="60" alt="">
        </a>
        <button class="navbar-toggler" type="button">
          <span class="navbar-toggler-icon"></span>
        </button>

        <span class="navbar-text ml-3">
                Stored <%= links.length %> entries in 30 categories
        </span>

        <form class="row ml-5">
            <input type="text" class="form-control search-query bar-size" placeholder="Search for a title..." aria-label="Search">
            <button class="btn btn-success my-2 ml-sm-2 my-sm-0" type="submit">Search</button>
        </form>
        
        <button type="button" class="btn btn-outline-primary ml-5 mx-auto" data-toggle="modal" data-target="#addNewModal">Add a new entry</button>
        
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="#">About</a>
            <a class="nav-item nav-link" href="#">Pricing</a>
            <a class="nav-item nav-link disabled" href="#">Disabled</a>
        </div>
    </nav>
</div>  

<!-- Modal for insert -->
<div class="modal fade" id="addNewModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Add a new link</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">

                <form method="post" action="/addLink">
                    <div class="form-group">
                        <label>Link</label>
                        <input type="text" class="form-control" name="url" id="urlInput" placeholder="Paste in url">
                    </div>
                    <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" name="title" id="titleInput" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="title">Description</label>
                        <input type="text" class="form-control" name="detail" id="descriptionInput" placeholder="Enter Description">
                    </div>
                    <!--
                    <div class="form-group">
                            <label for="category">Category</label>
                            <input type="text" class="form-control" name="inputCategory" placeholder="Where does it belong">
                    </div>-->

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>

                </form>
              
            </div>
        </div>
    </div>
</div>



<!-- Modal for edit -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Edit a link</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">

                <form method="post" action="/editLink">
                    <div class="form-group">
                        <label>linkId</label>
                        <input type="text" class="form-control" name="linkId" id="linkId" readonly>
                    </div>
                    <div class="form-group">
                        <label>Link</label>
                        <input type="text" class="form-control" name="url" id="urlEdit" placeholder="Edit url">
                    </div>
                    <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" name="title" id="titleEdit" placeholder="Edit title">
                    </div>
                    <div class="form-group">
                        <label for="title">Description</label>
                        <input type="text" class="form-control" name="detail" id="descriptionEdit" placeholder="Edit Description">
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Update</button>
                        <button type="button" class="btn btn-danger" id="deleteLink">Delete Link</button>
                    </div>

                </form>
              
            </div>
        </div>
    </div>
</div>
